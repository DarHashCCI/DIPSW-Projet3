{% extends 'zurwan.base.html.twig' %}

{% block title %}Zurvan - Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse mail'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte que mes infos personnelles renseignées sur le site soient stockées sur ce dernier jusqu'à la résiliation de mon compte."
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
{% block scriptend %}
    <script src="{{ asset('assets/js/loginregister/pass.js') }}"></script>
{% endblock %}