{% extends 'zurwan.base.html.twig' %}

{% block title %}Zurvan - Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <img src="{{ asset('assets/img/logo.png') }}" alt="Logo Survan" id="logo">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {{ form_start(registrationForm) }}
        <div id="divh1"><h2>S'inscrire</h2></div>
        {{ form_row(registrationForm.email, {
            label: 'Adresse mail'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte que mes infos personnelles renseignées sur le site soient stockées sur ce dernier jusqu'à la résiliation de mon compte."
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
{% block scriptend %}
    <script src="{{ asset('assets/js/loginregister/pass.js') }}"></script>
{% endblock %}