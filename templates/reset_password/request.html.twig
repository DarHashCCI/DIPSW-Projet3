{% extends 'zurwan.base.html.twig' %}

{% block title %}Zurvan - Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/passreset.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <img src="{{ asset('assets/img/logo.png') }}" alt="Logo Survan" id="logo">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
        <div id="divh1"><h2>Réinitialiser votre mot de passe</h2></div>
        {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
        <div>
            <small>
                Entrez ici votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un mail de réinitialisation</button>
    {{ form_end(requestForm) }}
        <a href="{{ path("app_login") }}">Mot de passe retrouvé ?</a>
    </div>
{% endblock %}