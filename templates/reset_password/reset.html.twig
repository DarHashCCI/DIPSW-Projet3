{% extends 'zurwan.base.html.twig' %}

{% block title %}Zurvan - réinitialisation de mot de passe{% endblock %}

{% block body %}
<div class="container">
    <img src="{{ asset('assets/img/logo.png') }}" alt="Logo Survan" id="logo">
    {{ form_start(resetForm) }}
    <div id="divh1"><h1>Réinitialiser votre mot de passe</h1></div>
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
